{
  "name": "malzeme-hesaplama",
  "version": "1.0.0",
  "description": "Profesyonel Malzeme Hesaplama Sistemi",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "exceljs": "^4.4.0",
    "xlsx": "^0.18.5"
  },
  "build": {
    "appId": "com.tetakazan.malzemehesaplama",
    "productName": "Malzeme Hesaplama Sistemi",
    "directories": {
      "output": "build"
    },
    "win": {
      "target": "nsis",
      "icon": "src/assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "src/assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "src/assets/icon.png"
    }
  }
}
